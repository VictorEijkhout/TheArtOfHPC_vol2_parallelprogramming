// charcount.cpp
template<typename key>
class histogram : public map<key,int> {
public:
// merge other histogram into this
  void operator+=
// some compilers want operator+
      ( const histogram<key>& other ) {
    for ( auto [k,v] : other )
      if ( map<key,int>::contains(k) )
	this->at(k) += v;
      else
	this->insert( {k,v} );
  };
// insert one char in this map
  void inc(char k) {
    if ( map<key,int>::contains(k) )
      this->at(k) += 1;
    else
      this->insert( {k,1} );
  };
};
